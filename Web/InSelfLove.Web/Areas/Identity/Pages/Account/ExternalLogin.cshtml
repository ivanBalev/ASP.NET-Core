@page
@model ExternalLoginModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Register"].Value;
}

<partial name="_SlimShowcasePartial" model="@ViewData["Title"]" />

<div class="section" id="loginPage">
    <div class="container py-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <section>

                    <p class="text-info text-center mb-0">
                        @localizer["You've successfully authenticated with"] <strong>@Model.LoginProvider</strong>.
                    </p>
                    <p class="text-info text-center mt-0">
                        @localizer["Please enter a username for this site below and click the Register button to finish logging in."]
                    </p>

                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <input class="timezone-IANA" type="hidden" asp-for="Input.TimezoneIANA" />
                                <div class="form-group">
                                    <label>@localizer["Username"]</label>
                                    <input asp-for="Input.Username" class="form-control" />
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>@localizer["Email"]</label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-outline-secondary btn-block">@localizer["Register"]</button>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <script src="~/Custom/js/setTimezoneOnRegister.js"></script>
}
