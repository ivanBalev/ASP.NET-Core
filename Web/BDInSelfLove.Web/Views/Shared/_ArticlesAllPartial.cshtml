@model BDInSelfLove.Web.ViewModels.Article.ArticlesPaginationViewModel
@{
    string controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    if (controllerName == "Search")
    {
        // Remove layout when using search (REST API Ajax Request)
        this.Layout = null;
    }
    this.Model.PaginationInfo.ControllerName = controllerName;
}

<div id="all-articles" class="py-4">
    <div class="container">
        <div class="row">
            @foreach (var article in Model.Articles)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <partial name="_ArticlePreviewPartial" model="@article" />
                </div>
            }
        </div>
        <partial name="_PaginationPartial" model="@Model.PaginationInfo" />
    </div>
</div>