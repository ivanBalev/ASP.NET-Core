@model BDInSelfLove.Web.ViewModels.Article.ArticlesPaginationViewModel
@{
    if (this.ViewContext.RouteData.Values["controller"].ToString() == "Search")
    {
        // Remove layout when called by search controller (Fetch Request)
        this.Layout = null;
    }
}

<div id="all-articles" class="py-4">
    <div class="container">
        <div class="row">
            @foreach (var article in Model.Articles)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <partial name="_ArticlePreviewPartial" model="@article" />
                </div>
            }
        </div>
        <partial name="_PaginationPartial" model="@Model.PaginationInfo" />
    </div>
</div>