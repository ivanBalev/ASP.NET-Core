@model BDInSelfLove.Web.InputModels.ArticleComment.ArticleCommentEditInputModel

<form class="mb-3 edit-comment">
    <input type="hidden" asp-for="@Model.ArticleId" value="@Model.ArticleId" />
    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
    <div class="form-group">
        <textarea asp-for="@Model.Content" class="form-control" rows="2"></textarea>
    </div>
    <div class="col-md-2 m-0 p-0">
        <a class="btn btn-outline-success btn-block btn-sm save-edit-btn">Save</a>
    </div>
</form>