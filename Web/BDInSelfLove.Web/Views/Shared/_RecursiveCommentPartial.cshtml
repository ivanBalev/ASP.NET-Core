@model BDInSelfLove.Web.ViewModels.Forum.Post.PostCommentViewModel

<div class="row">
    <div class="col-md-12">
        <div class="card mb-0 mt-5 border-0" id="@Model.Id">
            <div class="card-header bg-white border-0">
                <div class="media flex-wrap w-100 align-items-center">
                    <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" width="@ViewData["width"]" height="@ViewData["height"]"
                         class="d-block rounded-circle" alt="">
                    <div class="media-body ml-3">
                        <a class="user-link" href="@Model.UserId" data-abc="true">@Model.UserUserName</a>
                        <div class="text-muted small">@Model.CreatedOn.ToString("dd MMMM yyyy HH:mm")</div>
                    </div>
                    <div class="px-4 pt-3">
                        <a href="javascript:void(0)"
                           class="text-muted d-inline-flex align-items-center align-middle" data-abc="true">
                            <i class="fa fa-heart text-danger"></i>&nbsp; <span class="align-middle">445</span>
                        </a> 
                    </div>
                    <div class="px-4 pt-3">
                        <button type="button" class="btn btn-outline-primary btn-sm">
                            <i class="ion ion-md-create"></i>Reply
                        </button>
                    </div>
                    <div class="text-muted small ml-3">
                        <div>Member since IMPLEMENT ME <strong>01/1/2019</strong></div>
                        <div><strong>134 IMPLEMENT ME</strong> posts</div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Raw(Model.SanitizedContent)
            </div>

            @if (@Model.SubComments.Count > 0)
            {
                this.ViewData["width"] = "40";
                this.ViewData["height"] = "40";

                <div class="align-self-end" style="width: 90%">

                    @foreach (var item in Model.SubComments)
                    {
                        <partial name="_RecursiveCommentPartial" model="@item" />
                    }

                </div>
            }

        </div>
    </div>
</div>

