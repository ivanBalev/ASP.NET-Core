@using BDInSelfLove.Common
@using BDInSelfLove.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user"></i>
            </a>
            <ul class="dropdown-menu">
                @if (this.SignInManager.IsSignedIn(this.User))
                {
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                            <i class="fas fa-user-circle"></i> Profile
                        </a>
                    </li>
                    @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                        <li>
                            <a class="dropdown-item" asp-area="Administration" asp-controller="Dashboard" asp-action="Articles" title="Admin">
                                <i class="fas fa-cog"></i> Admin Panel
                            </a>
                        </li>
                    }

                }
                else
                {
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                }
            </ul>
        </li>
        @if (this.SignInManager.IsSignedIn(this.User))
        {
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                    <button type="submit" id="popover" data-toggle="popover" data-placement="right" data-content="Log Out" class="nav-link btn btn-link"><i class="fas fa-user-slash"></i></button>
                </form>
            </li>
        }
    
    </ul>
