@using BDInSelfLove.Common
@using BDInSelfLove.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle p-0" data-toggle="dropdown" aria-expanded="false">
            <img id="login-icon" src="~/Custom/icons/user-solid.svg" alt="login icon" data-creator="Icon by www.fontawesome.com / https://fontawesome.com/license" />
        </a>
        <ul class="dropdown-menu mb-2">
            @if (this.SignInManager.IsSignedIn(this.User))
            {
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        @localizer["Profile"]
                    </a>
                </li>

                @if (this.User.IsInRole(GlobalValues.AdministratorRoleName))
                {
                    <li>
                        <a class="dropdown-item" asp-area="" asp-controller="Article" asp-action="Create">
                            @localizer["Create Article"]
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-area="" asp-controller="Video" asp-action="Create">
                            @localizer["Create Video"]
                        </a>
                    </li>
                }

                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Context.Request.Path">
                        @localizer["Logout"]
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">@localizer["Register"]</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">@localizer["Login"]</a>
                </li>
            }

            <li class="search ml-4 mt-1">
                <img src="~/Custom/icons/search-solid.svg" class="search-login-btn" alt="search icon" data-creator="Icon by www.fontawesome.com / https://fontawesome.com/license"/>
            </li>
            <li class="ml-4">
                @await Html.PartialAsync("_CulturePartial")
            </li>
        </ul>
    </li>
</ul>
