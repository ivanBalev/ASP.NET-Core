@page
@model IndexModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Profile"].Value;
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>@localizer["Username"]</label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group mb-0">
                    <label>@localizer["Profile picture"]</label>
                    <div class="mb-3">
                        <img src=@Model.ProfilePicture alt="Profile picture" class="d-block img-fluid">
                    </div>
                    <label for="originalProfilePic" class="btn white-btn mb-3">
                        @localizer["Upload new profile picture"]
                        <input type="file" id="originalProfilePic" hidden>
                    </label>
                    <span class='label label-info' id="upload-file-info"></span>
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn green-btn">@localizer["Save"]</button>
            </form>
        </div>
        
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Custom/js/profilePictureCompression.js"></script>
}

