@page
@model IndexModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Profile"].Value;
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>@localizer["Username"]</label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label>@localizer["Phone number"]</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>@localizer["Profile picture"]</label>
                    <label asp-for="Input.ProfilePicture" class="btn btn-outline-warning text-black-50 mt-4 btn-block" style="margin-top: 0px !important">
                        @localizer["Upload new profile picture"]
                        <input type="file" asp-for="Input.ProfilePicture" hidden>
                    </label>
                    <span class='label label-info' id="upload-file-info"></span>
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-outline-success">@localizer["Save"]</button>
            </form>
        </div>
        <div class="col-md-6 mt-3">
            <img src=@Model.ProfilePicture alt="Profile picture" class="d-block img-fluid mb-3">
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    var uploadField = document.getElementById("Input_ProfilePicture");

    uploadField.onchange = function () {
        $('#upload-file-info').html(this.files[0].name);
        if (this.files[0].size > 1048576) {
            alert("File is too big, please lower image quality to less than 1 MB.");
            this.value = "";
        };
    };
</script>