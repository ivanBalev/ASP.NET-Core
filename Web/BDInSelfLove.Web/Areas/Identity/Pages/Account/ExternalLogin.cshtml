@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<partial name="_SlimShowcasePartial" model="@ViewData["Title"]" />

<div class="section" id="loginPage">
    <div class="container py-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <section>

                    <p class="text-info text-center mb-0">
                        You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
                    </p>
                    <p class="text-info text-center mt-0">
                        Please enter a username for this site below and click the Register button to finish
                        logging in.
                    </p>

                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Input.Username"></label>
                                    <input asp-for="Input.Username" class="form-control" />
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-outline-secondary btn-block">Register</button>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
