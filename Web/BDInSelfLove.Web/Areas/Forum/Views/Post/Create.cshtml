@model BDInSelfLove.Web.InputModels.Forum.Post.PostCreateInputModel

<div class="row">
    <div class="col-12">
        <h2 class="h4 text-dark bg-light mb-3 p-4 rounded">Create new post</h2>
        <form class="mb-3" method="post" asp-controller="Post" asp-action="Create">
            <div class="form-group">
                <label asp-for="@Model.Title">Title:</label>
                <input asp-for="@Model.Title" class="form-control" placeholder="Give your post a title." required="">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Content"></label>
                <textarea asp-for="@Model.Content" class="form-control" rows="10" id="mytextarea"></textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="@Model.CategoryId" />
            </div>
            <button type="submit" class="btn btn-outline-primary btn-block w-50 mx-auto">Create post</button>
        </form>
    </div>
</div>

@section HeadScripts
{
    <script src="https://cdn.tiny.cloud/1/mky5s0u10p9um2r86zbuod2opxi008rpr3tpgf6dtd16t787/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({ selector: '#mytextarea' });</script>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}