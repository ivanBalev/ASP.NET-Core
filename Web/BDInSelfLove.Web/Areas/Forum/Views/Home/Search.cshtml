@using BDInSelfLove.Data.Models
@using Microsoft.AspNetCore.Identity

@model BDInSelfLove.Web.ViewModels.Forum.Search.SearchViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    this.ViewData["width"] = "62";
    this.ViewData["height"] = "62";
}

<div class="row">
    <div class="col-md-4">
        <div class="card text-center bg-primary text-white mb-3">
            <div class="card-body">
                <h3>Posts</h3>
                <h4 class="display-4">
                    <i class="fas fa-pencil-alt"></i> @Model.TotalPostsCount
                </h4>
                <a asp-area="Forum"
                   asp-controller="Home"
                   asp-action="Search"
                   asp-route-term="@this.Model.SearchTerm"
                   asp-route-target="posts" class="btn btn-outline-light btn-sm btn-block">View</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center bg-success text-white mb-3">
            <div class="card-body">
                <h3>Categories</h3>
                <h4 class="display-4">
                    <i class="fas fa-folder"></i> @Model.TotalCategoriesCount
                </h4>
                <a asp-area="Forum"
                   asp-controller="Home"
                   asp-action="Search"
                   asp-route-term="@this.Model.SearchTerm"
                   asp-route-target="categories" class="btn btn-outline-light btn-sm  btn-block">View</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center bg-warning text-white mb-3">
            <div class="card-body">
                <h3>Comments</h3>
                <h4 class="display-4">
                    <i class="fas fa-comment"></i> @Model.TotalCommentsCount
                </h4>
                <a asp-area="Forum"
                   asp-controller="Home"
                   asp-action="Search"
                   asp-route-term="@this.Model.SearchTerm"
                   asp-route-target="comments" class="btn btn-outline-light btn-sm  btn-block">View</a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col">
        @if (Model.Posts != null)
        {
            <partial name="_SearchPostsPartial" model="@Model.Posts" />
        }
        else if (Model.Comments != null)
        {
            <partial name="_SearchCommentsPartial" model="@Model.Comments" />

        }
        else if (Model.Categories != null)
        {
            <partial name="_SearchCategoriesPartial" model="@Model.Categories" />
        }
    </div>
</div>
<div class="mb-3 clearfix">
    <nav>
        <ul class="pagination justify-content-center">
            @if (this.Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-area="Forum"
                       asp-controller="Home"
                       asp-action="Search"
                       asp-route-term="@this.Model.SearchTerm"
                       asp-route-target="@this.Model.SearchTerm"
                       asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= this.Model.PagesCount; i++)
            {
                var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link"
                       asp-area="Forum"
                       asp-controller="Post"
                       asp-action="Index"
                       asp-route-searchTerm="@this.Model.SearchTerm"
                       asp-route-page="@i">@i</a>
                </li>
            }

            @if (this.Model.CurrentPage == this.Model.PagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-area="Forum"
                       asp-controller="Post"
                       asp-action="Index"
                       asp-route-searchTerm="@this.Model.SearchTerm"
                       asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
