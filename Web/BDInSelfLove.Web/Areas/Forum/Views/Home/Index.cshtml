@model IList<BDInSelfLove.Web.ViewModels.Forum.Home.Category.HomeCategoryViewModel>
@using BDInSelfLove.Common



<div class="row">
    <div class="col-12 col-xl-9">
        @foreach (var category in Model)
        {
            <section class="mb-3">
                <div class="card">
                    <div class="card-header p-4 align-content-between">
                        <a asp-controller="Category" asp-action="Index" asp-route-id="@category.Id" class="text-dark">
                            <div class="h4">
                                @category.Name
                            </div>
                            <div>
                                @category.Description
                            </div>
                        </a>
                    </div>
                    <table class="table mb-xl-0">
                        <thead>
                            <tr>
                                <th scope="col">Last post</th>
                                <th scope="col">Total Posts</th>
                                <th scope="col">Total Comments</th>
                            </tr>
                        </thead>
                        @if (category.LastPost != null)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        <a asp-controller="Post" asp-action="Index" asp-route-id="@category.LastPost.Id"
                                           class="mb-0 font-weight-bold">
                                            @category.LastPost.Title
                                        </a>
                                        by <a asp-controller="Profile" asp-action="Index" asp-route-username="@category.LastPost.UserUserName">@category.LastPost.UserUserName</a>
                                        @category.LastPost.CreatedOn.ToString("dd MMMM yyyy HH:mm")
                                    </td>
                                    <td>
                                        <div>@category.PostsCount</div>
                                    </td>
                                    <td>
                                        <div>@category.CommentsCount</div>
                                    </td>
                                </tr>
                            </tbody>
                        }

                    </table>
                </div>
            </section>
        }


    </div>
    <div class="col-12 col-xl-3">
        <aside>
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <div class="row">
                    <div class="col mb-2">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success btn-block">Create Category</a>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-12 col-sm-6 col-xl-12">
                    <div class="card mb-3 mb-sm-0 mb-xl-3">
                        <div class="card-body">
                            <h2 class="h4 card-title">Members online</h2>
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">
                                        Forum
                                        member name
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <dl class="row mb-0">
                                <dt class="col-8">Total:</dt>
                                <dd class="col-4 mb-0">10</dd>
                            </dl>
                            <dl class="row mb-0">
                                <dt class="col-8">Members:</dt>
                                <dd class="col-4 mb-0">7</dd>
                            </dl>
                            <dl class="row mb-0">
                                <dt class="col-8">Guests:</dt>
                                <dd class="col-4 mb-0">3</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="h4 card-title">Forum statistics</h2>
                            <dl class="row mb-0">
                                <dt class="col-8">Total forums:</dt>
                                <dd class="col-4 mb-0">15</dd>
                            </dl>
                            <dl class="row mb-0">
                                <dt class="col-8">Total topics:</dt>
                                <dd class="col-4 mb-0">186</dd>
                            </dl>
                            <dl class="row mb-0">
                                <dt class="col-8">Total posts:</dt>
                                <dd class="col-4 mb-0">1927</dd>
                            </dl>
                            <dl class="row mb-0">
                                <dt class="col-8">Total members:</dt>
                                <dd class="col-4 mb-0">581</dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <div>Newest member:</div>
                            <div>
                                <a href="#">
                                    Forum
                                    member name
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
    </div>
</div>

