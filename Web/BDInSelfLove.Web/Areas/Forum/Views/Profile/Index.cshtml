@model BDInSelfLove.Web.ViewModels.Forum.Profile.ProfileUserViewModel

@{
    ViewData["width"] = "150";
    ViewData["height"] = "150";
}



<div class="row mt-3 pt-3 mb-0 pb-0">

    <div class="col-md-2">
        <div><img class="rounded" src="@Model.ProfilePhoto" height="@ViewData["height"]" width="@ViewData["width"]" alt="Alternate Text" /></div>
        <h3 class="mt-2">@Model.UserName</h3>
    </div>
    <div class="col-md-3">
        <p>Joined: 25 February 2020</p>
        <p>Posts: @Model.PostsCount</p>
        <p>Comments: @Model.CommentsCount</p>
    </div>
    <div class="col-md-7">
        <p>Location: </p>
        <p>Website: </p>
        <p>Instagram: </p>
        <p>Facebook: </p>
    </div>
</div>
<hr class="m-0 mb-2" />
<h3 class="text-center mb-4">Last Comments</h3>

<div class="justify-content-center">
    <vc:profile-comments user-id="@Model.Id"></vc:profile-comments>
</div>

