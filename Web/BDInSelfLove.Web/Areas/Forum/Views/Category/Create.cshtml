@model BDInSelfLove.Web.ViewModels.Forum.Category.CategoryCreateInputModel


<div class="row">
    <div class="col-12">
        <h2 class="h4 text-dark bg-light mb-3 p-4 rounded">Create New Category</h2>
        <form class="mb-3" method="post" asp-controller="Category" asp-action="Create">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" placeholder="Give your category a name.">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description"></label>
                <textarea asp-for="@Model.Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success btn-block">Create Category</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}