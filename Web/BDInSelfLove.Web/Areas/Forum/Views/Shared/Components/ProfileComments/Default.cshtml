@model IList<BDInSelfLove.Web.ViewModels.Forum.Profile.ProfileCommentViewModel>

@foreach (var comment in Model)
{
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card mb-0 pb-0 border-0" id="0">
                <div class="card-header text-dark p-0 pt-2 pl-2">
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@comment.ParentPostId">
                        <h4>@comment.ParentPostTitle</h4>
                    </a>
                </div>
                <div class="card-body m-0 p-0 pt-2 pl-2">
                    @Html.Raw(comment.SanitizedContent)
                </div>
            </div>
        </div>
    </div>
}